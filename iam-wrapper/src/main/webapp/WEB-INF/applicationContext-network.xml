<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/util    http://www.springframework.org/schema/util/spring-util-4.0.xsd">

	<bean id="taskExecutor" class="org.springframework.core.task.SimpleAsyncTaskExecutor"/>

	<!-- Router -->
	<bean id="router" class="org.opencloudengine.garuda.wrapper.Wrapper" init-method="start">
		<property name="policyjson" value="/policy/policy.json"/>
		<property name="wrapperPort" value="3000"/>
		<property name="springPort" value="8080"/>
		<property name="taskExecutor" ref="taskExecutor"/>
	</bean>
</beans>